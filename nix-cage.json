{
    "mounts": {
        "rw": [
            ".",
            "~/.emacs.d"
        ],
        "ro": [
            "~/.spacemacs",
            "~/.config/fish",
            "~/.gitconfig"
        ],
        "tmpfs": ["~"]
    },
    "environment": {
        "PATH":     "$HOME/.local/bin:$HOME/projects/bin:$PATH",
        "NIX_PATH": "$NIX_PATH",
        "GOPATH":   "$HOME/projects",
        "TERM":     "screen-256color"
    }
}
